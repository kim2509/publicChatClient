<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dy.publicchat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dy.publicchat.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Sherlock.__Theme.Light"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.dy.publicchat.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name="com.dy.publicchat.IntroActivity"
            android:label="@string/title_activity_intro"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dy.publicchat.RegisterAsRandomID"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_register_as_random_id"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.dy.publicchat.ChatActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_chat" >
        </activity>
        <activity
            android:name="com.dy.publicchat.UserProfileActivity"
            android:label="@string/user_profile_title" >
        </activity>
    </application>

</manifest>